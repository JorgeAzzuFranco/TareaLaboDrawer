<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:gravity="center"
    tools:context="com.jorge.Fragmentos.AddAlumnoFragment">

    <TextView
        android:id="@+id/txtCarnet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carnet"
        android:textColor="#000"
        android:textSize="24sp"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtCarnet"
        android:layout_alignBottom="@+id/txtCarnet"
        android:layout_toEndOf="@+id/txtCarnet"
        android:layout_toRightOf="@+id/txtCarnet"
        android:textSize="24sp" />

</RelativeLayout>
